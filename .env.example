APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=root
DB_PASSWORD=

BROADCAST_DRIVER=log
CACHE_DRIVER=file

# File Storage Configuration
# Options: 'local', 'public', 's3'
# - 'local': เก็บไฟล์ใน storage/app (ต้องใช้ storage:link)
# - 'public': เก็บไฟล์ใน storage/app/public (แนะนำสำหรับ production)
# - 's3': เก็บไฟล์ใน AWS S3 (ต้องตั้งค่า AWS credentials)
FILESYSTEM_DISK=public

QUEUE_CONNECTION=database
SESSION_DRIVER=file
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
# สำหรับการทดสอบใช้ mailpit (local) หรือ mailtrap
# สำหรับ production ใช้ Gmail, SendGrid, AWS SES, หรือ Mailgun
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@nitesa.go.th"
MAIL_FROM_NAME="${APP_NAME}"

# สำหรับ Gmail (production):
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-specific-password
# MAIL_ENCRYPTION=tls

# สำหรับ SendGrid (production):
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=your-sendgrid-api-key
# MAIL_ENCRYPTION=tls

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# SMS Configuration (Optional - สำหรับการส่ง SMS notification)
# Vonage (Nexmo) - https://www.vonage.com/
# VONAGE_KEY=your-vonage-api-key
# VONAGE_SECRET=your-vonage-api-secret
# VONAGE_SMS_FROM=NITESA

# Twilio - https://www.twilio.com/
# TWILIO_SID=your-twilio-account-sid
# TWILIO_TOKEN=your-twilio-auth-token
# TWILIO_FROM=+1234567890

# Google OAuth Configuration (สำหรับ login ด้วย Google)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"
