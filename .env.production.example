# NITESA Production Environment Configuration
# Copy this file to .env and update with your production values

# ============================================
# APPLICATION
# ============================================
APP_NAME="ระบบนิเทศ NITESA"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://nitesa.go.th

# ============================================
# LOGGING
# ============================================
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ============================================
# DATABASE
# ============================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=nitesa_production
DB_USERNAME=nitesa_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# ============================================
# CACHE & SESSION (แนะนำใช้ Redis)
# ============================================
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# ============================================
# QUEUE (แนะนำใช้ Redis)
# ============================================
QUEUE_CONNECTION=redis

# ============================================
# FILE STORAGE
# ============================================
# Options: 'local', 'public', 's3'
# สำหรับ production แนะนำ 'public' หรือ 's3'
FILESYSTEM_DISK=public

# ============================================
# MAIL CONFIGURATION (Production)
# ============================================
# ตัวเลือก A: SendGrid (แนะนำ)
MAIL_MAILER=smtp
MAIL_HOST=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USERNAME=apikey
MAIL_PASSWORD=YOUR_SENDGRID_API_KEY
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@nitesa.go.th"
MAIL_FROM_NAME="ระบบนิเทศ NITESA"

# ตัวเลือก B: Gmail (สำหรับ production ขนาดเล็ก)
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-specific-password
# MAIL_ENCRYPTION=tls
# MAIL_FROM_ADDRESS="noreply@nitesa.go.th"
# MAIL_FROM_NAME="ระบบนิเทศ NITESA"

# ตัวเลือก C: AWS SES
# MAIL_MAILER=ses
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_DEFAULT_REGION=ap-southeast-1
# MAIL_FROM_ADDRESS="noreply@nitesa.go.th"
# MAIL_FROM_NAME="ระบบนิเทศ NITESA"

# ============================================
# REDIS
# ============================================
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================
# GOOGLE OAUTH (ถ้าใช้)
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://nitesa.go.th/auth/google/callback

# ============================================
# AWS S3 (ถ้าใช้ S3 สำหรับ file storage)
# ============================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=nitesa-storage
AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================
# SMS CONFIGURATION (Optional)
# ============================================
# Vonage (Nexmo)
# VONAGE_KEY=your-vonage-api-key
# VONAGE_SECRET=your-vonage-api-secret
# VONAGE_SMS_FROM=NITESA

# Twilio
# TWILIO_SID=your-twilio-account-sid
# TWILIO_TOKEN=your-twilio-auth-token
# TWILIO_FROM=+1234567890

# ============================================
# BROADCASTING (ถ้าใช้)
# ============================================
BROADCAST_DRIVER=log

# ============================================
# PUSHER (ถ้าใช้)
# ============================================
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
